<?xml version="1.0" encoding="utf-8"?>
<resources>


    <style name="ButtonStyle">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Regular" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="Medium" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="SemiBold" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/roboto_semi_bold</item>
    </style>

    <style name="Regular.ColorWhite">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Medium.ColorWhite">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="SemiBold.ColorWhite">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="SemiBold.ColorSecondary">
        <item name="android:textColor">@color/colorSecondary</item>
    </style>

    <style name="Regular.ColorWhite.28">
        <item name="android:textSize">28sp</item>
    </style>

    <style name="Medium.ColorWhite.16">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="SemiBold.ColorWhite.12">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="SemiBold.ColorSecondary.12">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="LoginTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/auth_input_text_hint</item>
        <item name="boxBackgroundMode">none</item>
        <item name="hintEnabled">false</item>
        <item name="background">@drawable/bg_input_text_auth</item>
    </style>

    <style name="BottomNavigationActiveStyle" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/light_gray</item>
    </style>


</resources>
